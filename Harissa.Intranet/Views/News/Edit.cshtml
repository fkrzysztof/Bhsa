@model Harissa.Data.Data.News
@using Harissa.Data.HelperClass
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("TopNavi")
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row align-items-end">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsID" />
            <input type="hidden" asp-for="MediaItem" />
            <div class="form-group">
                @{ string img = new CloudAccess().GetImg(Model.MediaItem);}
                <img src="@img" class="imgPreview img-thumbnail" />
                <div class="custom-file mt-3">
                    <input type="file" asp-for="FormFileItem" class="custom-file-input newMediaItem" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="FormFileItem" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" cols="3" rows="8"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfPublication" class="control-label"></label>
                <input asp-for="DateOfPublication" class="form-control" />
                <span asp-validation-for="DateOfPublication" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-4">
                    <label class="control-label">News Photos</label>
                    <hr />
                </div>
                @foreach (var newsMediaItem in Model.NewsMediaCollections)
                {
                    <div class="col-md-3 m-2 text-center shadow-sm">
                        <img src="@(new CloudAccess().GetImg(newsMediaItem.MediaItem))" class="h-100" style="max-height:150px;" />
                        @*<input type="file" name="newsMediaCollectionItem" value="@newsMediaItem.MediaItem" class="form-control" />*@
                        <a asp-action="Delete" asp-route-id="NewsID" class="removeButton" data-id="@newsMediaItem.NewsMediaCollectionID"><i class="fas fa-trash m-4" style="font-size: 1rem; color:black;"></i></a>
                    </div>
                }
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label">Add photos <i class="fas fa-plus-circle" style="font-size:1.5rem; color:black;"></i></label>
                        <div class="custom-file mt-3">
                            <input type="file" multiple name="NewsMediaCollectionItem" class="custom-file-input">
                            <label class="custom-file-label">Choose file</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 text-right mt-5">
            <button type="submit" class="btn btn-outline-dark">Save</button>
        </div>

    </div>
</form>

<script src="~/js/news.js"></script>

<script src="~/js/photoPreview.js">
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


