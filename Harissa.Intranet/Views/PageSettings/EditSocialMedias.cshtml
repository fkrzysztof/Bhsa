@model Harissa.Data.Data.SocialMedia
@using Harissa.Data.HelperClass

@{
    ViewData["Title"] = "EditSocialMedias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Html.PartialAsync("TopNavi")

<form asp-action="EditSocialMedias" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SocialMediaID" />
        <input type="hidden" asp-for="PageSettingsID" />
        <input type="hidden" asp-for="Icon" />
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewIcon" class="control-label"></label>
                <input asp-for="NewIcon" class="form-control newMediaItem" />
                <span asp-validation-for="NewIcon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            @*<i class="@Model.Icon" style="font-size:6rem; color:black; vertical-align:central;" id="iconPreview"></i>*@
            @{
                string smImg = new CloudAccess().GetImg(Model.Icon);
                @:<img src="@smImg" style="width:100px;" class="imgPreview" />
            }
        </div>
        <div class="col-12">
            <div class="form-group text-right">
                <input type="submit" value="Save" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </div>
</form>



<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/photoPreview.js"></script>

