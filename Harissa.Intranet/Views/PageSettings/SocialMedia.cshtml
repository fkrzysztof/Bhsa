@model IEnumerable<Harissa.Data.Data.SocialMedia>
@{
    ViewData["Title"] = "PrivacyPolicy";
}
@using Harissa.Data.HelperClass

@await Html.PartialAsync("TopNavi")
@await Html.PartialAsync("PageSettingsTopNavi")


<div class="row">
    <div class="col-12">
        <h5 class="mt-5">Social media</h5>
        <hr />
    </div>
    <!--Add socialMedias-->
    <div class="col-lg-12 mt-2 mb-2">
        <div class="card shadow h-100">
            <div class="card-header bg-white">
                <h6>Add</h6>
            </div>
            <div class="card-body">
                <form asp-action="CreateSocialMedias" enctype="multipart/form-data" class="w-100">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="@Model.FirstOrDefault().Name" class="control-label"></label>
                                <input asp-for="@Model.FirstOrDefault().Name" value="" class="form-control" />
                                <span asp-validation-for="@Model.FirstOrDefault().Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.FirstOrDefault().Link" class="control-label"></label>
                                <input asp-for="@Model.FirstOrDefault().Link" value="" class="form-control" />
                                <span asp-validation-for="@Model.FirstOrDefault().Link" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.FirstOrDefault().NewIcon" class="control-label"></label>
                                <div class="custom-file">
                                    <input type="file" asp-for="@Model.FirstOrDefault().NewIcon" class="custom-file-input newMediaItem" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                                <span asp-validation-for="@Model.FirstOrDefault().NewIcon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group text-center">
                                @{
                                    @*string addSMImg = new CloudAccess().GetImg(null);
                                        @:<img src="@addSMImg" style="width:250px;" class="imgPreview" />*@
                                }
                                <img src="@(new CloudAccess().GetImg(null))" style="width:250px;" class="imgPreview" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group text-right">
                                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--socialMedias list-->
    <div class="col-lg-12 mt-2 mb-2">
        <div class="card shadow h-100">
            <div class="card-header bg-white">
                <h6>List</h6>
            </div>
            <div class="card-body">
                @if (Model != null)
                    @foreach (var item in Model)
                    {
                        <div class="row align-items-center mt-2 mb-2">
                            <div class="col-2 col-sm-1 text-left">
                                @{
                                    @*string smImg = new CloudAccess().GetImg(item.Icon);
                                        @:<img src="@smImg" style="width:30px;" />*@
                                }
                                <img src="@(new CloudAccess().GetImg(item.Icon))" style="width:30px;" />


                            </div>
                            <div class="col-8 col-sm-10 text-left">
                                @Html.DisplayFor(modelItem => item.Name)
                                <small>@Html.DisplayFor(modelItem => item.Link)</small>

                            </div>
                            <div class="col-2 col-sm-1 text-right">
                                <a asp-action="DeleteSocialMedias" asp-route-id="@item.SocialMediaID"><i class="fas fa-trash" style="font-size: 1rem; color:black;"></i></a>
                                <a asp-action="EditSocialMedias" asp-route-id="@item.SocialMediaID" data-id="@item.SocialMediaID" data-icon="@item.Icon" data-name="@item.Name" data-link="@item.Link"><i class="fas fa-tools" style="font-size: 1rem; color:black;"></i></a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>Lista nie zawiera elementów..</p>
                    }

            </div>
        </div>
    </div>
</div>

<script src="~/js/photoPreview.js"></script>
