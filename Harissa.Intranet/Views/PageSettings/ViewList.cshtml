@model IEnumerable<Harissa.Data.Data.SocialMedia>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SocialMediaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SocialMediaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SocialMediaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
