@{ 
    string action = ViewContext.RouteData.Values["Action"].ToString();
}

<div class="row mb-4">
    <div class="col-12">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(action == "Index"? "active":"")" asp-action="Index" asp-controller="PageSettings">Index page</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(action == "SocialMedia"? "active":"")" asp-action="SocialMedia" asp-controller="PageSettings">Social media</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(action == "PrivacyPolicy"? "active":"")" asp-action="PrivacyPolicy" asp-controller="PageSettings">Privacy policy</a>
            </li>
        </ul>
    </div>
</div>