@model Harissa.Data.Data.Video

@await Html.PartialAsync("TopNavi")
@using Harissa.Data.Data
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@foreach (var item in ViewBag.VideoList as List<Video>)
{
    <div class="row my-4">

        <div class="col-sm-5 d-flex justify-content-around justify-sm-content-strat">
            <iframe src="https://www.youtube.com/embed/@item.Link" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen style="height:100%;">
            </iframe>
        </div>
        <div class="col-sm-3 d-flex justify-content-around">
            <p><i class="fas fa-hashtag" style="font-size: 0.75rem; color:black;"></i><strong>@item.Index</strong></p> 
            <a href="https://youtu.be/@item.Link"><small>https://youtu.be/@item.Link</small></a>
        </div>
        <div class="col-sm-4 d-flex justify-content-around justify-sm-content-end">
            <div class="row w-100">
                <div class="col-6">
                    @if (item.Index != (ViewBag.VideoList as List<Video>).Select(s => s.Index).Max())
                    {

                        <a asp-action="Up" asp-route-index="@item.Index">
                            <i class="fas fa-chevron-up" style="font-size: 1rem; color:black;"></i>
                        </a>

                    }
                    @if (item.Index != (ViewBag.VideoList as List<Video>).Select(s => s.Index).Min())
                    {

                        <a asp-action="Down" asp-route-index="@item.Index">
                            <i class="fas fa-chevron-down" style="font-size: 1rem; color:black;"></i>
                        </a>

                    }
                </div>

                <div class="col-6">
                    <a asp-action="Delete" asp-route-id="@item.VideoID"><i class="fas fa-trash" style="font-size: 1rem; color:black;"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.VideoID"><i class="fas fa-tools m-md-2 m-5" style="font-size: 1rem; color:black;"></i></a>
                </div>

            </div>
        </div>
    </div>
}


