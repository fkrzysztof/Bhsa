@model IEnumerable<Harissa.Data.Data.Concert>
@using Harissa.Data.HelperClass


@foreach (var item in Model)
{
    <div class="row d-flex justify-content-center">
        @*<div class="col-sm-2 my-4 align-items-start text-center text-sm-right text-white">*@
        <div class="col-sm-2 my-4 text-white">
            <h1 class="text-center text-sm-right">@item.Date.Day/@item.Date.Month<br /></h1>
            <h2 class="text-center text-sm-right">@item.Date.Year</h2>
        </div>
        <div class="col-sm-8 my-4">
            <div class="card h-100 w-100 shadow footer-background">
                @{
                    string getCloudimg = new CloudAccess().GetImg(item.MediaItem);
                }
                <img src="@getCloudimg" class="card-img-top" />
                <div class="text-center my-2 text-white-50">
                    <h3 class="text-white mt-2">@item.Name</h3>
                    @item.Address<br />
                    <hr />
                    @item.Description<br />
                    <hr />
                    @item.Link<br />
                    <hr />
                    @item.Price<br />
                </div>
            </div>
        </div>
    </div>
        }
